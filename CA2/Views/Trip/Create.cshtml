@model CA2.Models.Trip

@{
    ViewBag.Title = "Create";
}
<div class="container-fluid">
<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
    <legend>Trip<small> : Create</small></legend>

        <div class="row-fluid">
            <div class="span2">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="span2 offset2">
                @Html.LabelFor(model => model.MinGuests)
                @Html.EditorFor(model => model.MinGuests)
                @Html.ValidationMessageFor(model => model.MinGuests)
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2">
                @Html.LabelFor(model => model.StartDate)
                @Html.TextBoxFor(model => model.StartDate, new{@id="DobStart"})
                @Html.ValidationMessageFor(model => model.StartDate)
            </div>
            <div class="span2 offset2">
                @Html.LabelFor(model => model.EndDate)
                @Html.TextBoxFor(model => model.EndDate, new{@id="DobEnd"})
                @Html.ValidationMessageFor(model => model.EndDate)
            </div>
        </div>
        <div class="form-actions">
            <input type="submit" value="Save" class="btn btn-success"/>
            @Html.ActionLink("Back to Hommepage", "Index", "Home", new {@class = "btn"})
        </div>
    </fieldset>
}
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript">
        $(document).ready(function() {
            $("#DobStart").datepicker({
            });
        });
    </script>
    
        <script type="text/javascript">
            $(document).ready(function () {
                $("#DobEnd").datepicker({
                });
            });
    </script>
}
