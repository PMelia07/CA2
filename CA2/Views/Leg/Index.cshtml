@using BootstrapSupport
@model IEnumerable<CA2.Models.Leg>

@{
    ViewBag.Title = "Index";
}
<div class="container-fluid">
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new{@class="btn btn-primary"})
</p>
<table class="table-striped">
    <tr>
        <th>Options</th>
        <th>
            @Html.DisplayNameFor(model => model.StartLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
    </tr>
    @foreach (var item in Model) {

        <tr>
            <td>
                <div class="btn-group">
                    <a class="btn btn-warning" data-toggle="dropdown" href="#"> 
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        @{
                            @Html.TryPartial("_actions", item)
                            <li>@Html.ActionLink("Edit", "Edit", new { id=item.LegId })</li>
                            <li>@Html.ActionLink("Details", "Details", new { id=item.LegId })</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Delete", "Delete", new { id=item.LegId })</li>
                        }
                    </ul>
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
        </tr>

        <tr>
            <th>
                Options
            </th>
            <th></th>
            <th>
                Guest Name
            </th>
        </tr>
        
        foreach (CA2.Models.Guest gst in item.Guests)
        {
            <tr>
                <td>
                    @Html.TryPartial("_actions", item)
                    <li>@Html.ActionLink("Edit", "Edit", "Guest", new { id=gst.GuestId })</li>
                    <li>@Html.ActionLink("Details", "Details", "Guest", new { id = gst.GuestId })</li>
                    <li class="divider"></li>
                    <li>@Html.ActionLink("Delete", "Delete", "Guest", new { id = gst.GuestId })</li>
                </td>
                <td></td>
                <td>
                    @Html.DisplayFor(g => gst.Name)
                </td>
            </tr>
        }
    }

</table>
</div>
